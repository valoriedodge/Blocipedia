<% if current_user.admin? || (current_user.premium? && @wiki.user == current_user) %>
  <div class="form-group">
    <%= f.label :private, class: 'checkbox' do %>
    <%= f.check_box :private %> Private wiki
    <% end %>
  </div>
<% end %>

<div class="form-group">
  <%= f.label :collaborators %>
  <%= f.text_field :collaborators,
                class: 'form-control',
                placeholder: "Enter wiki collaborators emails separated by commas",
                value: collaborators.map(&:email).join(', ')%>
</div>
